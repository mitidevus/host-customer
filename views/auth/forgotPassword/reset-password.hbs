<div class="background-wrapper">
    <div class="auth-wrapper">

        <form method="post" action="/auth/resetpassword" class="auth-form">
            <h3>Reset password</h3>

            {{#if message}}
            <div class="auth-success">
                {{message}}
            </div>
            {{/if}}

            {{#if error}}
            <div class="auth-error">
                {{error}}
            </div>
            {{/if}}

            <input type="hidden" name="id" value="{{id}}" />

            <div class="my-3 form-group">
                <input name="new_password" type="password" class="form-control"
                    placeholder="New password (At least 6 characters)" required />
            </div>

            <div class="my-3 form-group">
                <input name="confirm_password" type="password" class="form-control" placeholder="Conform new password"
                    required />
            </div>

            <div class="d-grid center mb-3 form-group">
                <button type="submit" class="btn btn-success w-75 rounded submit">Submit</button>
            </div>
        </form>
    </div>
</div>